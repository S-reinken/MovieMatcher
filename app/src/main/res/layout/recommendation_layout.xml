<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Overall"
        android:id="@+id/overallRecButton"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="35dp"
        android:layout_alignParentTop="true"
        android:onClick="onOverallButtonClick"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Major"
        android:id="@+id/majorRecButton"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="37dp"
        android:layout_below="@+id/overallRecButton"
        android:layout_alignLeft="@+id/overallRecButton"
        android:layout_alignStart="@+id/overallRecButton"
        android:onClick="onMajorButtonClick"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>